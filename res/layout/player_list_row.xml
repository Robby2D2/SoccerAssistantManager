<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
	<TextView android:id="@+id/id" xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="3dip"
	    android:textColor="#00FF00"/>
	<TextView android:id="@+id/firstName" xmlns:android="http://schemas.android.com/apk/res/android"
	    android:paddingRight="3dip"
	    android:textSize="25sp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	<TextView android:id="@+id/lastName" xmlns:android="http://schemas.android.com/apk/res/android"
	    android:textSize="25sp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>

</LinearLayout>